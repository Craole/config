{
	"files.autoSave": "afterDelay",
	"editor.formatOnSave": true,
	"code-runner.clearPreviousOutput": true,
	"code-runner.saveFileBeforeRun": true,
    "window.autoDetectColorScheme": true,
	"window.doubleClickIconToClose": true,
	"explorer.incrementalNaming": "smart",
	"[javascriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},

	// {* Workbench *}
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.tips.enabled": true,
	"workbench.commandPalette.preserveInput": true,
	"workbench.quickOpen.preserveInput": true,
	"workbench.editor.revealIfOpen": true,
	"workbench.settings.openDefaultKeybindings": true,
	"workbench.settings.openDefaultSettings": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.preferredLightColorTheme": "Tomorrow Operator Mono",
	"workbench.preferredHighContrastColorTheme": "Æ’ - Gruvbox - Operator Mono/Italic",
	"workbench.preferredDarkColorTheme": "Tomorrow Night Operator Mono",
	"workbench.colorTheme": "Tomorrow Night Operator Mono",
	"workbench.colorCustomizations":
		{
			"[Tomorrow Night Eighties Operator Mono]":
				{
					// "statusBar.background": "#333332",
					"statusBar.background": "#262626",
					"statusBar.foreground": "#ffffff35",
					"activityBar.background": "#262626",
					"activityBar.foreground": "#ffffff70",
					"editorLineNumber.foreground": "#ffffff35",
					"titleBar.activeBackground": "#262626",
					"tab.activeBackground": "#333332",
					"tab.inactiveBackground": "#262626",
					"breadcrumb.background": "#262626",
					"minimap.selectionHighlight": "#ffffff70",
					"minimap.errorHighlight": "#ff0000a4",
					"minimap.warningHighlight": "#ffd000"
				}
		},
		"workbench.editorAssociations": [
			{
				"viewType": "jupyter-notebook",
				"filenamePattern": "*.ipynb"
			}
		],

	// {* Terminal *}
	"terminal.integrated.fontWeightBold": "normal",
	"terminal.integrated.rightClickBehavior": "copyPaste",
	"terminal.integrated.shell.windows": "powershell.exe",
    "terminal.integrated.shellArgs.windows": [
        "-ExecutionPolicy",
        "Bypass",
        "-NoLogo",
        "-NoProfile",
        "-NoExit",
        "-Command",
        ". 'C:\\tools\\Cmder\\vendor\\profile.ps1'"
    ],

	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"terminal.integrated.fontFamily": "'Cascadia Mono','Hack','terminal.integrated.fontFamily','FiraCode NF','Cascadia Code PL',Consolas,monospace",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.fontWeight": "400",
	"terminal.integrated.lineHeight": 1.2,
	"terminal.integrated.letterSpacing": 2,
	"terminal.integrated.cursorStyle": "underline",

	"editor.renderControlCharacters": true,
	"editor.wordWrap": "on",
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	"editor.minimap.size": "fill",
	"editor.fontFamily": "'Operator Mono Lig','Fira Code','Consolas'",
	"editor.fontLigatures": true,
	"editor.fontWeight": "300",
	"editor.lineHeight": 25,
	"editor.letterSpacing": 0.5,
	"editor.tabSize": 4,
	"editor.suggestSelection": "first",
	"editor.renderIndentGuides": false,
	"editor.cursorStyle": "line",
