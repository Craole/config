	"prettier.useTabs": true,
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"terminal.explorerKind": "integrated",
	"files.simpleDialog.enable": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.hotExit": "onExitAndWindowClose",
	"files.associations": {
		"*.css": "css",
		"*.gs": "javascriptreact",
		"*.js": "javascriptreact"
	},

	"markdown.links.openLocation": "beside",
	"markdown.extension.preview.autoShowPreviewToSide": true,
	"markdown.extension.print.theme": "dark",
	"rainbow_csv.csv_lint_detect_trailing_spaces": true,
	"search.maintainFileSearchCache": true,
	"workbench.startupEditor": "none",
	"python.pythonPath": "C:\\Python39\\python.exe",
	"python.languageServer": "Microsoft",
	"markdown.preview.fontFamily": "'Fira Code iScript', 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
	"python.insidersChannel": "off",
	"jupyter.insidersChannel": "off",
	"editor.accessibilitySupport": "off",
	"editor.find.cursorMoveOnType": false,
	"git.enableSmartCommit": true,
	"git.autofetch": true,
	"powershell.integratedConsole.showOnStartup": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.integratedConsole.forceClearScrollbackBuffer": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"[powershell]": {
		"editor.renderWhitespace": "all",
		"editor.renderControlCharacters": true,
		"files.trimTrailingWhitespace": true,
		"files.encoding": "utf8bom",
		"files.autoGuessEncoding": true,
		"editor.tabCompletion": "on"
	},
	"explorer.confirmDelete": false,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"editor.mouseWheelZoom": true,
	"editor.smoothScrolling": true,
	"workbench.editor.untitled.hint": "hidden",
	"window.zoomLevel": -1,
	"typescript.updateImportsOnFileMove.enabled": "always"
}
